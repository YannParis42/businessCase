{% extends 'base-front.html.twig' %}

{% block title %}Reset Password{% endblock %}
{% block body %}

<div class="container m-4" style="height: 100vh;">
    <h2 class="greenText">Nouveau mot de passe</h2>
    <div class="col-8">
        {{form_start(form)}}
        {{form_row (form.email)}}
        <button type="submit" class="btn btn-success"><i class="fa-solid fa-envelope"></i></button>
    </div>
    
    {{form_end(form)}}
</div>

{% endblock %}