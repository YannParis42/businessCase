{% extends 'base-front.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<div class="container m-4" style="height: 100vh;">
    <form method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
    
        {% if app.user %}
            <div class="mb-3">
                Vous êtes connecté en tant que {{ app.user.username }}, <a href="{{ path('app_logout') }}">Déconnexion</a>
            </div>
        {% endif %}
        <a href="{{ path('app_register')}}">Pas encore de compte?</a><br>
        <a href={{ path('app_reset') }}>Mot de passe oublié?</a>
    
        <h2 class="greenText">Connexion</h2>
        
        <div class="col-8">
            <input type="email" placeholder="Email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control m-2" autocomplete="email" required autofocus>
            <input type="password" placeholder="Mot de passe" name="password" id="inputPassword" class="form-control m-2" autocomplete="current-password" required>
            <input type="hidden" name="_csrf_token"
                   value="{{ csrf_token('authenticate') }}"
            >
            {#
                Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                See https://symfony.com/doc/current/security/remember_me.html
                <div class="checkbox mb-3">
                    <label>
                        <input type="checkbox" name="_remember_me"> Remember me
                    </label>
                </div>
            #}
            <button type="submit" class="btn btn-success">
                Connexion
            </button>
        </div>
    </form>

</div>

{% endblock %}
