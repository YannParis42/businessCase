{% extends 'base-admin.html.twig' %}

{% block title %}Index des catégories{% endblock %}

{% block body %}
    <div class="m-4">
        <h2 class="greenText">Category index</h2>
        <button type="button m-2" class="btn btn-outline-success col-2">  <a href="{{ path('app_admin_category_new') }}">Ajouter une catégorie</a></button>
        <table class="table table-striped table-success">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Label</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for category in categories %}
                <tr>
                    <td>{{ category.id }}</td>
                    <td>{{ category.label }}</td>
                    <td>
                        <a href="{{ path('app_admin_category_show', {'id': category.id}) }}"><i class="fa-solid fa-magnifying-glass"></i></a>
                        <a href="{{ path('app_admin_category_edit', {'id': category.id}) }}"><i class="fa-solid fa-pen"></i></a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    
{% endblock %}
