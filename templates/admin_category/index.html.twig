{% extends 'base-admin.html.twig' %}

{% block title %}Index des catégories{% endblock %}

{% block body %}
{% if app.user %} 
{% if is_granted('ROLE_ADMIN') %}
    <div class="container m-4">
        <div class="row m-4">
            <h2 class="greenText mb-4 p-0">Index des catégories</h2>
            <button type="button m-2" class="btn btn-outline-success col-2">  <a href="{{ path('app_admin_category_new') }}">Ajouter une catégorie</a></button>
            <table class="table table-striped table-success  mt-4 col-8">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Label</th>
                        <th>actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for category in categories %}
                    <tr>
                        <td>{{ category.id }}</td>
                        <td>{{ category.label }}</td>
                        <td>
                            <a href="{{ path('app_admin_category_show', {'id': category.id}) }}"><i class="fa-solid fa-magnifying-glass"></i></a>
                            <a href="{{ path('app_admin_category_edit', {'id': category.id}) }}"><i class="fa-solid fa-pen"></i></a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="3">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
    {% endif %}
    {% else  %}
    <div class="container my-4">
        <div class="text-center" style="height: 100vh;">
            <h2 >Vous n'avez pas les droits!</h2><br> 
            <h2><a href="{{path('app_home')}}">ACCUEIL</a></h2>
        </div>
    </div>
    
    {% endif %}
    
{% endblock %}
