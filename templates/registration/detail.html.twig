{% extends 'base-front.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <div class="container m-4">
        <div class="col-8">
            <h2 class="greenText">Client</h2>
            <table class="table">
                <tbody>
                    <tr>
                        <th class="greenText">Id</th>
                        <td >{{ user.id }}</td>
                    </tr>
                    <tr>
                        <th class="greenText">Email</th>
                        <td>{{ user.email }}</td>
                    </tr>

                    <tr>
                        <th class="greenText">FirstName</th>
                        <td>{{ user.firstName }}</td>
                    </tr>
                    <tr>
                        <th class="greenText">LastName</th>
                        <td>{{ user.lastName }}</td>
                    </tr>
                    <tr>
                        <th class="greenText">BirthDate</th>
                        <td>{{ user.birthDate ? user.birthDate|date('Y-m-d') : '' }}</td>
                    </tr>
                    <tr>
                        <th class="greenText">Gender</th>
                        <td>{{ user.gender }}</td>
                    </tr>
                    <tr>
                        <th class="greenText">CreatedAt</th>
                        <td>{{ user.createdAt ? user.createdAt|date('Y-m-d') : '' }}</td>
                    </tr>
                </tbody>
            </table>
            <a class="btn btn-success mt-4" href="{{ path('app_admin_user_index') }}">retour</a>
            {# <a href="{{ path('app_admin_user_edit', {'id': user.id}) }}">edit</a>
            {{ include('admin_user/_delete_form.html.twig') }} #}
        </div>
    </div>
{% endblock %}