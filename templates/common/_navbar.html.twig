                    </li>
                    <li class="nav-item pe-3">
                        <a class="nav-link " href="{{ path('app_product') }}">Catalogue</a>
                    </li>


                    {% set categories = getParentCategory()  %}
                    {% for category in categories %}
                    <li class="nav-item pe-3">
                        <a class="nav-link " href="{{ path('app_product_category', {'id': category.id})}}">{{category.label}}</a>
                    </li>
                    {% endfor %}

                </ul>

                {% if app.user %}
