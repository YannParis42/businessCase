<div class=" m-0 p-0">
    <nav class="navbar navbar-expand-lg navbar-light green">
        <div class=" container-fluid">
            <a class="navbar-brand" href="{{path('app_home')}}">
                <img src="{{ asset('build/images/green-logo.png') }}" alt="" width="80" height="80">
