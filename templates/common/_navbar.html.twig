                    <p class="m-0">Bonjour, <a class="navbarA" href="{{ path('app_detail' , {'id': app.user.id}) }}"> {{ app.user.firstName }}</a>   <a href="{{ path('app_logout') }}"><button type="button" class="btn btn-outline-dark"><i class="fa-solid fa-xmark"></i></button></p>
