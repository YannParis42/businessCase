{% extends 'base-admin.html.twig' %}

{% block title %}Modification marque{% endblock %}

{% block body %}
{% if app.user %} 
{% if is_granted('ROLE_ADMIN') %}
<div class="container m-4">
    <div class="col-8">
        {{ form_start(form) }}
        <H2 class="greenText mb-4 p-0">Modifier marque</H2>
        {{form_row(form.label)}}
        {{form_row(form.imagePath)}}
        {% if brand.imagePath %}
        <p class="greenText">image actuelle:</p>
        <img class="container-image border" src="{{asset('upload/brandImages/'~brand.imagePath)}}"><br>
        {% endif %}
        <button type="submit" class="btn btn-success mt-4">Soumettre</button>
        {{ form_end(form) }}
    </div>
</div>
{% endif %}
{% else  %}
<div class="container my-4">
    <div class="text-center" style="height: 100vh;">
        <h2 >Vous n'avez pas les droits!</h2><br> 
        <h2><a href="{{path('app_home')}}">ACCUEIL</a></h2>
    </div>
</div>

{% endif %}
{% endblock %}