{% extends 'base-front.html.twig' %}

{% block title %}Tout nos produits{% endblock %}

{% block body %}

<div class="container">
    <div class="row ">
        <H3 class="greenText mb-4">Tout nos produits</H3>
        {% for product in products %}
        <div class="col-10 col-lg-3 m-2 my-2 p-2 border border-success">
           
                {% for picture in product.productPictures %}
                <div class="container-image mb-2">
                    <img src="{{asset('upload/productImages/'~picture.path)}}">
                </div>
                {% endfor %}
                {{product.label |slice(0, 30)}}...<br>
                <p class="price">{{product.price}}â‚¬</p>
                <a href="{{path('productDetail', {'id': product.id} )}}" class="btn btn-outline-success"><i class="fa-solid fa-magnifying-glass"></i></a>
               
                {% if app.user %}
                <a href="{{path('app_add_basket', {'id': product.id} )}}" class="btn btn-outline-success"><i class="fa-solid fa-basket-shopping"></i></a>
                {% endif %}

        </div>
        {% endfor %}
    </div>
</div>

{% endblock %}